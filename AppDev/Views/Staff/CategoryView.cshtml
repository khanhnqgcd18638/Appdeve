@model List<AppDev.Models.Category>
@{
    ViewBag.Title = "CategoryView";
}

<h2>CategoryView</h2>

<h2>CourseManagement</h2>
@Html.ActionLink("Create", "CreateCategory", "Staff")
<table class="table">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Category</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var k1 in Model)
        {
            <tr>
                <td>@k1.Id</td>
                <td>@k1.Name</td>
                <td>
                    @Html.ActionLink("Delete", "DeleteCategory", "Staff",
                                 new { id = k1.Id },
                                 new { @class = "btn btn-primary" })
                </td>
            </tr>
        }
    </tbody>
</table>